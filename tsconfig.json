{
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": ["ES2023"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "rootDir": "src",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2023",
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "exclude": ["node_modules", "out"],
  "include": ["src/**/*.ts", "**/**/*.ts", "src/test/runTest.ts"]
}
